generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        String   @id @default(cuid())
  url       String   @unique
  createdAt DateTime @default(now())
  reports   Report[]
}

model Report {
  id         String   @id @default(cuid())
  siteId     String
  createdAt  DateTime @default(now())
  score      Int
  rawMeta    Json
  checks     Json
  aiAdvice   Json
  lighthouse Json?
  site       Site     @relation(fields: [siteId], references: [id])
}
